#!/usr/bin/env python

import sys

def estimate(optimistic, realistic, pessimistic):
    avg = (optimistic + realistic * 4 + pessimistic) / 6
    stdDev = (pessimistic - optimistic) / 6
    truncate = lambda n: round(n * 4) / 4
    return truncate(avg + stdDev * 2)

if len(sys.argv) is not 4:
    print("Usage: pert OPTIMISTIC REALISTIC PESSIMISTIC")

else:
    print(estimate(*map(float, sys.argv[1:])))
